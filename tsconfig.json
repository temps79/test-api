{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es5"
    ],
    "allowJs": true,
    "jsx": "react",
    "noEmit": true,
    "incremental": false,
    "isolatedModules": true,
    "strict": true,
    "strictNullChecks": false,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}